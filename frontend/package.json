{
  "name": "andelog-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:fe": "live-server src --port=5173 --open=/",
    "dev:server": "nodemon server/app.js",
    "dev": "concurrently -n FE,API -c green,cyan \"npm:dev:fe\" \"npm:dev:server\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && node -e \"const fs=require('fs'); ['dist/css','dist/js','dist/assets'].forEach(dir=>fs.mkdirSync(dir,{recursive:true}));\"",
    "build:copy": "copyfiles -u 1 \"src/assets/**/*\" dist/ 2>nul || echo Assets copied",
    "build:css": "esbuild src/css/styles.css --bundle --minify --outfile=dist/css/styles.css",
    "build:js": "node scripts/build-js.js",
    "build:html": "node scripts/build-html.js",
    "build": "node scripts/build.js",
    "build:fast": "npm run clean && copyfiles -u 1 \"src/**/*\" dist/",
    "build:watch": "nodemon --watch src --ext html,css,js --exec \"npm run build\"",
    "start": "node server/app.js",
    "start:prod": "NODE_ENV=production node server/app.js",
    "lint": "eslint \"src/js/**/*.js\" --fix",
    "format": "prettier --write \"src/**/*.{js,css,html,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.25.9",
    "eslint": "^8.57.0",
    "html-minifier-terser": "^7.2.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1"
  }
}
